@model SecretSanta.Web.ApiModels.GroupInputViewModel

@{
    ViewData["Title"] = "Add";
}

<h1 class="is-size-3">Add Group</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="All" class="help is-danger"></div>
            <div class="form-group field">
                <label asp-for="Name" class="label"></label>
                <input asp-for="Name" class="input" required="required" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="field">
                <div class="control">
                    <button class="button is-primary">Create</button>
                </div>
                <div class="control">
                    <button asp-controller="Groups" asp-action="Index" class="button is-light">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>


